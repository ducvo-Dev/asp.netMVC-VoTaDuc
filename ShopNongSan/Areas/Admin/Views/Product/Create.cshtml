@model MyLibrary.Model.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 text-danger text-uppercase">
                    <strong> Cập Nhật SẢN PHẨM</strong>
                </div>
                <div class="col-md-6 text-right ">
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fas fa-save"></i>Lưu[Cập Nhật]
                    </button>
                    <a class="btn btn-sm btn-info" href="@Url.Action("Index", "Product")"><i class="fas fa-backward"></i>Quay về danh sách</a>


                </div>
            </div>

        </div>

        <div class="card-body">

            <div class="row">
                <div class="col-md-9">
                    <div class="form-group">
                        <label> Tên sản phẩm</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label> CAT ID</label>
                        @Html.DropDownListFor(model => model.Catid, (SelectList)ViewBag.ListCat, "[Chọn Loại]", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Catid, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label> Hình ảnh</label>
                        @Html.EditorFor(model => model.Img, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Img, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label> Chi tiết sản phẩm</label>
                        @Html.EditorFor(model => model.Detail, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Số Lượng</label>
                        @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label> Giá</label>
                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Giá sale</label>
                        @Html.EditorFor(model => model.Pricesale, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Pricesale, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <div class="form-group">
                            <label> Từ khóa SEO</label>
                            @Html.TextAreaFor(model => model.Metakey, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Metakey, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label> Mô tả SEO</label>
                            @Html.TextAreaFor(model => model.MetaDesc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MetaDesc, "", new { @class = "text-danger" })
                        </div>
                       
                    <div class="form-group">
                        <label> Trạng thái</label>
                        @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Text = "Xuất Bản", Value = "1" }, new SelectListItem { Text = "Chưa Xuất Bản", Value = "2" } }, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
