@model IEnumerable<MyLibrary.Model.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6 text-danger text-uppercase">
                <strong> DANH SÁCH Bài Viết</strong>
            </div>
            <div class="col-md-6 text-right ">
                <a class="btn btn-sm btn-success" href="@Url.Action("Create","Post")"><i class="fas fa-plus"></i>Thêm</a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Trash","Post")"><i class="fas fa-trash-alt"></i>Thùng rác</a>

            </div>
        </div>

    </div>

    <div class="card-body">
        @Html.Partial("_XMessage")
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    <input type="checkbox" name="checkALL" />
                </th>
                <th>Tên Bài viết</th>
                <th>Slug</th>
                <th>Chi tiết bài viết</th>
                <th>Kiểu bài viết</th>
                <th>Ngày Tạo</th>
                <th>Ngày Sửa</th>
                <th>Chức năng</th>
                <th>ID</th>

            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                <input type="checkbox" name="checkALL" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created_At)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated_At)
            </td>
            <td>
                @if (item.Status == 1)
                {
                    <a class="btn btn-sm btn-success" href="@Url.Action("Status","Post",new { id=item.Id})">
                        <i class="fas fa-toggle-on"></i>
                    </a>
                }
                else
                {
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Status","Post",new { id=item.Id})">
                        <i class="fas fa-toggle-off"></i>
                    </a>
                }
                <a class="btn btn-sm btn-info" href="@Url.Action("Edit","Post",new { id=item.Id})">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Deltrash","Post",new { id=item.Id})">
                    <i class="fas fa-trash-alt"></i>
                </a>

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>


        </tr>
            }

        </table>

    </div>
</div>



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Topid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Slug)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Img)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MetaKey)
        </th>
        <th>
