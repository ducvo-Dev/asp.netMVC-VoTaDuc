@model MyLibrary.Model.Topic

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 text-danger text-uppercase">
                    <strong> Cập Nhật Chủ Đề</strong>
                </div>
                <div class="col-md-6 text-right ">
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fas fa-save"></i>Lưu[Cập Nhật]
                    </button>
                    <a class="btn btn-sm btn-info" href="@Url.Action("Index","Topic")"><i class="fas fa-backward"></i>Quay về danh sách</a>


                </div>
            </div>

        </div>

        <div class="card-body">

            <div class="row">
                <div class="col-md-9">
                    <div class="form-group">
                        <label> Tên loại chủ đề</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label> Từ khóa SEO</label>
                        @Html.TextAreaFor(model => model.MetaKey, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MetaKey, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label> Mô tả SEO</label>
                        @Html.TextAreaFor(model => model.MetaDesc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MetaDesc, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label> Chủ đề cha</label>
                        @Html.DropDownListFor(model => model.Parentid, (SelectList)ViewBag.ListCat, "[Chọn Loại]", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Parentid, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Sắp Xếp</label>
                        @Html.DropDownListFor(model => model.Orders, (SelectList)ViewBag.ListOrder, "[Vị Trí]", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Orders, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label> Trạng thái</label>
                        @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Text = "Xuất Bản", Value = "1" }, new SelectListItem { Text = "Chưa Xuất Bản", Value = "2" } }, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}

