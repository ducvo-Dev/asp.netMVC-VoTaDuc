@model IEnumerable<MyLibrary.Model.Product>
@if (Model.Count() > 0)
{
<h1 class="text-center">@ViewBag.NameCat</h1>

    <div class="row">
        @foreach (var pro in Model)
        {
            <div class="col col-md-3 mb-2">
                <div class="card" style="width: 100%;">
                    <a href="~/@pro.Slug">
                        <img src="~/Public/images/sp2.jpg" class="card-img-top" alt="...">
                    </a>
                    <div class="card-body">
                        <a href="~/@pro.Slug">
                            <h4 class="card-title text-center font18">@pro.Name</h4>
                        </a>
                            <h5 class="card-title text-center font18">Giá: @pro.Price đ</h5>
                            <p class="card-text">Mô tả: @pro.Detail</p>
                            <a href="#" class="btn btn-primary">Đặt Mua</a>
                    </div>

                </div>

            </div>
        }


    </div>
}
